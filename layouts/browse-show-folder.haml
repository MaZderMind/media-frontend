!!! 5
%html
  %head
    %title
      CCC-TV -
      = @item[:title]
    = render '/partials/header'
  %body
    = render '/partials/navbar'
    %div.container

      %div.row
        %div.col-md-2
          %img{src: @item[:conference].logo}
        %div.col-md-10
          %h3= @item[:conference].acronym
          %h2= @item[:conference].title

      %ul
        %li
          %a(href="..") ..
        - if @item[:events].present?
          - @item[:events].each do |event|
            %li
              %img{src: h(event.gif_url)}
              %img{src: h(event.thumb_url)}
              %a{href: h(event.url)}
                = event.title
              = event.persons.join(', ')
              = event.release_date || event.date
              - recordings = event.recordings.downloaded
              - if recordings.present?
                = recording_length_minutes(recordings.first)
 
      %pre
        = @item[:events].first.recordings.to_yaml

      %pre
        = @item[:conference].to_yaml
        

      %pre
        = @item[:events].to_yaml

      = yield

      = render '/partials/footer'

    %script(src="/assets/js/jquery.min.js")
    %script(src="/assets/js/bootstrap.min.js")

