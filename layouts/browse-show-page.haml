!!! 5
%html
  %head
    %title
      CCC-TV -
      = @item[:title]
    = render '/partials/header'
  %body
    = render '/partials/navbar'
    %div.container

      %h3
        = @item[:event].title

      %video.video{controls: 'controls', poster: h(@item[:event].poster_url), width: 640, height: 360}
        - if @item[:recordings].present?
          - @item[:recordings].each do |recording|
            %source{type: recording.mime_type, src: h(recording.url)}

      %pre
        = @item[:conference].to_yaml
      %pre
        = @item[:event].to_yaml
      %pre
        = @item[:recordings].to_yaml

      = yield

      = render '/partials/footer'

    %script(src="/assets/js/jquery.min.js")
    %script(src="/assets/js/bootstrap.min.js")

