.search.container-fluid{"data-titletpl" => '"#" - Search - media.ccc.de'}
  %form.initial
    %h1= @title
    %input.text{:name => "q", :placeholder => "Searchâ€¦", :type => "text"}
    %input.submit{:type => "submit", :value => "Go"}

  %section.results.initial
    .statistics
      Results
      %span.start #

      to
      %span.end #

      of
      %span.total #

      Results (in
      %span.runtime #
      ms)

    %ol.event-previews-search
      %li.no-results = No results
      %li.template
        %a.event-preview{href: '#event.url'}
          %img.conference-logo{src: '#event.conference.logo_url', alt: '#event.conference.title'}
          .caption
            %ul.metadata
              %li.recording_length
                %span.fa.fa-clock-o
                %span.t= 'recording_length(event.recordings.downloaded)'
              %li.date
                %span.fa.fa-calendar-o
                %span.t= 'date(event)'
              %li.persons
                %span.persons.fa
                %span.t= 'event.persons_text'
            %h3
              %span.number
              %span.t= 'event.title'

    %ul.paging
      %li.prev
        %a{:href => ""} prev
      %li.prefix M

      %li.page.template
        %a{:href => "#"}
          e
          .number 1

      %li.postfix dia.ccc.de
      %li.next
        %a{:href => ""} next
