!!! 5
%html
  %head
    %title
      CCC-TV -
      = h @item[:title]
    = render '/partials/header'
  %body
    = render '/partials/navbar'
    %div.container

      %ul
      - if @item[:events].present?
        - @item[:events].each do |event|
          %li
            %a{href: h(event.url)}
              = event.title

      %pre
        = @item[:events].to_yaml

      = yield

      = render '/partials/footer'

    %script(src="/assets/js/jquery.min.js")
    %script(src="/assets/js/bootstrap.min.js")

